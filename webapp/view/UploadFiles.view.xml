<mvc:View
    controllerName="moneym.controller.UploadFiles"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    class="viewPadding">
    <l:VerticalLayout>
        <u:FileUploader
            id="fileUploader"
            name="file"
            fileType="pdf"
            mimeType="application/pdf"
            change="onFileChange"
            uploadComplete="onUploadComplete" />
        <Button
            text="Upload"
            press="handleUploadPress" />
    </l:VerticalLayout>
</mvc:View>