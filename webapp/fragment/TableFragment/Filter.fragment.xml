<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		confirm="handleFilterDialogConfirm">
		<filterItems>

			<ViewSettingsFilterItem
				text="Employee Id"
				key="EmployeeId"
				multiSelect="false" items="{dialogModel>/EmployeeId/}">
				<items>
					<ViewSettingsItem text="{dialogModel>Text}" key="{dialogModel>Key}" />
				</items>
			</ViewSettingsFilterItem>

			<ViewSettingsFilterItem
				text="Employee Name"
				key="EmployeeName"
				multiSelect="false" items="{dialogModel>/EmployeeName/}">
				<items>
					<ViewSettingsItem text="{dialogModel>Text}" key="{dialogModel>Key}" />
				</items>
			</ViewSettingsFilterItem>

			<ViewSettingsFilterItem
				text="Approval Levels"
				key="ApprovalLevels"
				multiSelect="false" items="{dialogModel>/ApprovalLevels/}">
				<items>
					<ViewSettingsItem text="{dialogModel>Text}" key="{dialogModel>Key}" />
				</items>
			</ViewSettingsFilterItem>

		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>